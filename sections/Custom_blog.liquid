{% comment %}
** Featured blog - homepage partial **
- Draggable section
{% endcomment %}
<section class="blog-section blog-custom">
  <div class="container">
      <div class="m-blog-row">
          <div class="blog-l-row">
            {% if section.settings.left-title != blank %}
              <h2 class="custom-link">{{ section.settings.left-title }}</h2>
            {% endif %}
            {% if section.settings.left-disc != blank %}
              {{ section.settings.left-disc }}
            {% endif %}
            {% if section.settings.butn-text != blank %}
              <a href="{{ section.settings.btn-url }}">{{ section.settings.butn-text }}</a>
            {% endif %}
          </div>
          <div class="blog-r-row">
            {% include 'custom-blog-post' %}
          </div>
      </div>
  </div>
</section>


{% schema %}

{
  "name": "Custom Blog posts",
  "class": "featured-blog-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Blog posts"
    },
    {
      "type": "text",
      "id": "left-title",
      "label": "Left Heading"
    },
    {
      "type": "richtext",
      "id": "left-disc",
      "label": "Discription"
    },
    {
      "type": "text",
      "id": "butn-text",
      "label": "Buton text"
    },
    {
      "type": "url",
      "id": "btn-url",
      "label": "Button Url"
    },
    {
      "type": "blog",
      "id": "blog_widget_select",
      "label": "Blog"
    },
    {
      "type": "checkbox",
      "id": "show_blog_image",
      "label": "Show blog image"
    },
    {
      "type": "checkbox",
      "id": "show_blog_disc",
      "label": "Show blog Discription"
    },
    {
      "type": "range",
      "id": "home_page_articles",
      "label": "Posts",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "blog_tags",
      "label": "Show tags"
    },
    {
      "type": "checkbox",
      "id": "blog_author",
      "label": "Show author"
    },
    {
      "type": "checkbox",
      "id": "read_time",
      "label": "Show estimated read time",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_date",
      "label": "Show date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_comment_count",
      "label": "Show comment count",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "read_more_link",
      "label": "Show continue reading link",
      "default": true
    }
  ],
  "presets": [{
    "name": "Custom Blog posts",
    "category": "Blog",
    "settings": {
      "blog_widget_select": ""
    }
  }]
}
{% endschema %}
