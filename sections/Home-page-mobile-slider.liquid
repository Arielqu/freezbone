{% comment %} Content settings {% endcomment %}
{%- assign blocks = section.blocks -%}
{%- assign title = section.settings.title | escape -%}
{%- assign sub_title = section.settings.sub_title | escape -%}
{%- assign html5_video1 = block.settings.html5_video1 | escape -%}
{%- assign html5_video2 = block.settings.html5_video2 | escape -%}
{% comment %} End content settings {% endcomment %}

{% comment %} Advanced {% endcomment %}
{%- assign css_class = section.settings.css_class -%}
{%- assign custom_css = section.settings.custom_css -%}

{% comment %} Section specific CSS {% endcomment %}
{% style %}
  {%
    render 'css-loop',
    css: custom_css,
    id: id
  %}
{% endstyle %}


 
<section class="section {{ css_class }} mobile-test-sect">
  <div class="container"> 
  	{% if title != blank %}
	  	<div class="top-heading-content">
	  		<h2>{{ title }}</h2>
	  		<p>{{ sub_title }}</p>
	  	</div>
  	{% endif %}
    {% if section.settings.Reviews-title != blank %}
		<div class="more-rev-div-sli">
			<h3>{{ section.settings.Reviews-title }}</h3>
			{% if section.settings.Reviews-discription != blank %}
			<p>{{ section.settings.Reviews-discription }}</p>
			{% endif %}
			{% if section.settings.review-button_label != blank %}
			<a href="{{ section.settings.review_button_link }}">{{ section.settings.review-button_label }}</a>
			{% endif %}
		</div>
	{% endif %}
	<div class="owl-slider">
		<div id="home-rev-mobile-carousel" class="owl-carousel owl-theme review-slider">
			{% for block in blocks %}
	      	{% comment %} Content settings {% endcomment %}
	      	{%- assign title1 = block.settings.Testimonial-title-1 -%}
	      	{%- assign disc1 = block.settings.test-discription1 -%}
	      	{%- assign html5_video1 = block.settings.html5_video1 | escape -%}
	      	{% comment %} End content settings {% endcomment %}
			    <div class="item review-item-div">
					<div class="border-style--{{ block.settings.border_style }} text-align--{{ block.settings.align_text }}">
				     	<div class="slider-hom-m-row">
				     		<div class="th-col">
				     			<div class="thirs-m-row">
				     				{% if block.settings.first-col-image != blank %}
				         			<div class="rew-cont">
				         				<div class="pt-img">
											<a class="size_chart img_w_review" href="javascript:;" data-fancybox="" data-src="#size-chart-{{ block.id }}" data-type="inline" data-no-instant="">
	            								<img src="{{ block.settings.first-col-image | img_url: 'master'  }}">
								         	</a>
				         				</div>
				         				<div class="js-sizechart-lightbox video_review" id="size-chart-{{ block.id }}" style="display: none;">
											<span class="">
										        <video width="100%" height="100%" controls>
										        <source src="{{ html5_video1 }}" type="video/mp4">
										        <source src="{{ html5_video1 }}" type="video/ogg">
										        </video>
										    </span>
										</div>
				         				<div class="content-rev">
				         					<div class="title-star">
				         						<h2>{{ title1 }}</h2>
				         						{% if block.settings.star_img1 != blank %}
								                	<img alt="{{ block.settings.star_img1.alt | escape }}"
								                     class="star_img lazyload {{ settings.image_loading_style }}"
								                     data-sizes="25vw"
								                     style="max-width: 100px; margin:auto;"
								                     data-src="{{ block.settings.star_img1 | img_url: '2048x' }}"
								                     data-srcset="{{ block.settings.star_img1 | img_url: '200x' }} 200w,
								                                  {{ block.settings.star_img1 | img_url: '300x' }} 300w,
								                                  {{ block.settings.star_img1 | img_url: '400x' }} 400w,
								                                  {{ block.settings.star_img1 | img_url: '500x' }} 500w,
								                                  {{ block.settings.star_img1 | img_url: '600x' }} 600w,
								                                  {{ block.settings.star_img1 | img_url: '1000x' }} 1000w"
								                	/>
								 				{% endif %}
				         					</div>
				         					<div class="desc">
				         						{{disc1 | truncatewords: 10 }}
				         					</div>
				         				</div>
				         			</div>
			         			{% endif %}
				     			</div>
				     		</div>
				     	</div>
				    </div>
				</div>
			{% endfor %}
		</div>
    </div>
    </div> 
</section>

<style>
.sub_hheading_r{margin-bottom:40px}
@media only screen and (max-width: 798px){
