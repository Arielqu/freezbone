{% schema %}
{
  "name": "Review Slider",
  "class": "shopify-section--text-columns-with-images",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Text columns with images"
    },
  {
      "type": "text",
      "id": "sub_title",
      "label": "Sub Heading",
      "default": "Text columns with images"
    },
    {
      "type": "header",
      "content": "Bottom-Box"
    },
    {
      "type": "text",
      "id": "Reviews-title",
      "label": "Reviews title ",
      "default": "Add a title or tagline"
    },
    {
      "type": "richtext",
      "id": "Reviews-discription",
      "label": "Discription",
      "default": "<p>Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs.</p>"
    },
    {
      "type": "text",
      "id": "review-button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "review_button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Advanced"
    },
    {
      "type": "paragraph",
      "content": "[Learn more](https://help.outofthesandbox.com/hc/en-us/articles/360022329373)"
    },
    {
      "type": "text",
      "id": "css_class",
      "label": "CSS Class"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS"
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Column",
      "limit": 20,
      "settings": [
        {
          "type": "image_picker",
          "id": "first-col-image",
          "label": "First Image"
        },
        {
	      "type": "text",
	      "id": "html5_video1",
	      "label": "HTML5 MP4/OGV File URL"
	    },
        {
          "type": "text",
          "id": "Testimonial-title-1",
          "label": "Testimonial title ",
          "default": "Add a title or tagline"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading size",
          "default": "regular_text",
          "options": [
            {
              "value": "regular_text",
              "label": "Regular"
            },
            {
              "value": "large_text",
              "label": "Large"
            }
          ]
        },
        {
          "type": "richtext",
          "id": "test-discription1",
          "label": "Discription",
          "default": "<p>Share blog posts, products, or promotions with your customers. Use this text to describe products, share details on availability and style, or as a space to display recent reviews or FAQs.</p>"
        },
		{
          "type": "image_picker",
          "id": "star_img1",
          "label": "Image Star"
        },
        {
          "type": "select",
          "id": "align_text",
          "label": "Text alignment",
          "default": "left",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        },
        {
          "type": "select",
          "id": "border_style",
          "label": "Border style",
          "default": "none",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "box",
              "label": "Box"
            },
            {
              "value": "quote",
              "label": "Quote"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home custom Mobile Slider",
      "category": "Text",
      "blocks": [
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        }
      ]
    }
  ],
  "templates": [
    "index",
    "product",
    "page"
  ]
}

{% endschema %}
